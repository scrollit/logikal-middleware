<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record Rules -->
    <record id="rule_mbioe_session_log_user" model="ir.rule">
        <field name="name">MBIOE Session Log: User Access</field>
        <field name="model_id" ref="model_mbioe_session_log"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_mbioe_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="rule_mbioe_session_log_manager" model="ir.rule">
        <field name="name">MBIOE Session Log: Manager Access</field>
        <field name="model_id" ref="model_mbioe_session_log"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_mbioe_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <!-- MBIOE Folder Rules -->
    <record id="rule_mbioe_folder_all" model="ir.rule">
        <field name="name">MBIOE Folder: All Users Read Access</field>
        <field name="model_id" ref="model_mbioe_folder"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_mbioe_user')), (4, ref('group_mbioe_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <!-- MBIOE Project Rules -->
    <record id="rule_mbioe_project_all" model="ir.rule">
        <field name="name">MBIOE Project: All Users Read Access</field>
        <field name="model_id" ref="model_mbioe_project"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_mbioe_user')), (4, ref('group_mbioe_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
