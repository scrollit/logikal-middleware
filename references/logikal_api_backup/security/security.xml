<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_mbioe_manager" model="res.groups">
        <field name="name">MBIOE Manager</field>
        <field name="category_id" ref="base.module_category_administration"/>
        <field name="comment">Users who can manage MBIOE API configuration and view all session logs</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_mbioe_user" model="res.groups">
        <field name="name">MBIOE User</field>
        <field name="category_id" ref="base.module_category_tools"/>
        <field name="comment">Users who can view their own MBIOE session activity</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
