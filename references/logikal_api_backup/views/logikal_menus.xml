<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Logikal Menu -->
    <menuitem id="menu_logikal_main" 
              name="Logikal" 
              sequence="100"/>

    <!-- Session Logs Menu -->
    <menuitem id="menu_logikal_session_log" 
              name="Session Logs" 
              parent="menu_logikal_main" 
              action="action_logikal_session_log" 
              sequence="40"/>

    <!-- Session Log Action -->
    <record id="action_logikal_session_log" model="ir.actions.act_window">
        <field name="name">Session Logs</field>
        <field name="res_model">logikal.session.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No session logs found!
            </p>
            <p>
                Session logs track API calls to the Logikal middleware.
                They will appear here after performing operations.
            </p>
        </field>
    </record>

    <!-- Session Log Tree View -->
    <record id="view_logikal_session_log_tree" model="ir.ui.view">
        <field name="name">logikal.session.log.tree</field>
        <field name="model">logikal.session.log</field>
        <field name="arch" type="xml">
            <tree string="Session Logs" decoration-success="status == 'success'" decoration-danger="status == 'failed'">
                <field name="create_date"/>
                <field name="operation"/>
                <field name="status"/>
                <field name="response_code"/>
                <field name="duration_ms"/>
                <field name="user_id"/>
                <field name="request_url"/>
                <field name="response_summary"/>
            </tree>
        </field>
    </record>

    <!-- Session Log Form View -->
    <record id="view_logikal_session_log_form" model="ir.ui.view">
        <field name="name">logikal.session.log.form</field>
        <field name="model">logikal.session.log</field>
        <field name="arch" type="xml">
            <form string="Session Log">
                <sheet>
                    <group>
                        <group>
                            <field name="operation"/>
                            <field name="status"/>
                            <field name="response_code"/>
                            <field name="duration_ms"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="request_method"/>
                            <field name="request_url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Request Details" name="request">
                            <field name="request_payload" widget="text"/>
                        </page>
                        <page string="Response Details" name="response">
                            <field name="response_body" widget="text"/>
                            <field name="response_summary" widget="text"/>
                        </page>
                        <page string="Error Details" name="error" attrs="{'invisible': [('status', '=', 'success')]}">
                            <field name="error_message" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
