<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Logikal Project Tree View -->
    <record id="view_logikal_project_tree" model="ir.ui.view">
        <field name="name">logikal.project.tree</field>
        <field name="model">logikal.project</field>
        <field name="arch" type="xml">
            <tree string="Logikal Projects" decoration-info="sync_status == 'pending'" decoration-success="sync_status == 'synced'" decoration-danger="sync_status == 'error'">
                <field name="name"/>
                <field name="description"/>
                <field name="status"/>
                <field name="phase_count"/>
                <field name="elevation_count"/>
                <field name="middleware_sync_date"/>
                <field name="sync_status"/>
                <field name="is_synced" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Logikal Project Form View -->
    <record id="view_logikal_project_form" model="ir.ui.view">
        <field name="name">logikal.project.form</field>
        <field name="model">logikal.project</field>
        <field name="arch" type="xml">
            <form string="Logikal Project">
                <header>
                    <button name="action_sync_from_middleware" type="object" string="Sync from Middleware" class="btn-primary"/>
                    <button name="action_get_complete_data" type="object" string="Get Complete Data" class="btn-secondary"/>
                    <field name="sync_status" widget="statusbar" statusbar_visible="pending,synced,error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_phases" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="phase_count" widget="statinfo" string="Phases"/>
                        </button>
                        <button name="action_view_elevations" type="object" class="oe_stat_button" icon="fa-image">
                            <field name="elevation_count" widget="statinfo" string="Elevations"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="logikal_id" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="status"/>
                            <field name="is_synced"/>
                        </group>
                        <group>
                            <field name="created_at"/>
                            <field name="updated_at"/>
                            <field name="middleware_sync_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Phases" name="phases">
                            <field name="phase_ids" readonly="1">
                                <tree string="Phases">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="status"/>
                                    <field name="elevation_count"/>
                                    <field name="middleware_sync_date"/>
                                    <field name="sync_status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Logikal Project Search View -->
    <record id="view_logikal_project_search" model="ir.ui.view">
        <field name="name">logikal.project.search</field>
        <field name="model">logikal.project</field>
        <field name="arch" type="xml">
            <search string="Search Logikal Projects">
                <field name="name"/>
                <field name="description"/>
                <field name="status"/>
                <field name="logikal_id"/>
                <separator/>
                <filter string="Synced" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Pending" name="pending" domain="[('sync_status', '=', 'pending')]"/>
                <filter string="Error" name="error" domain="[('sync_status', '=', 'error')]"/>
                <separator/>
                <filter string="With Phases" name="with_phases" domain="[('phase_count', '>', 0)]"/>
                <filter string="With Elevations" name="with_elevations" domain="[('elevation_count', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by': 'status'}"/>
                    <filter string="Sync Status" name="group_sync_status" domain="[]" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Logikal Project Action -->
    <record id="action_logikal_project" model="ir.actions.act_window">
        <field name="name">Logikal Projects</field>
        <field name="res_model">logikal.project</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_logikal_project_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Logikal projects found!
            </p>
            <p>
                Projects are automatically synchronized from the Logikal middleware.
                Make sure the middleware is configured and running.
            </p>
        </field>
    </record>

    <!-- Logikal Project Menu -->
    <menuitem id="menu_logikal_project" 
              name="Projects" 
              parent="menu_logikal_main" 
              action="action_logikal_project" 
              sequence="10"/>
</odoo>
