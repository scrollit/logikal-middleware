<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Logikal Import Wizard - Single State-Based View -->
    <record id="view_logikal_import_wizard_form" model="ir.ui.view">
        <field name="name">logikal.import.wizard.form</field>
        <field name="model">logikal.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Logikal Import">
                <field name="state" invisible="1"/>
                <field name="sale_order_id" invisible="1"/>
                
                <!-- SELECTION STATE CONTENT -->
                <sheet invisible="state != 'select'">
                    <!-- Progress Indicator - Top Right -->
                    <div class="oe_button_box" style="position: absolute; top: 0; right: 0;">
                        <field name="state" widget="statusbar" 
                               statusbar_visible="select,confirm"
                               options="{'clickable_stages': false}"/>
                    </div>
                    
                    <group>
                        <group string="Project Selection">
                            <field name="mbioe_project_id" 
                                   placeholder="Search for Logikal project..."
                                   options="{'no_create': True, 'no_open': True}"
                                   widget="selection2"/>
                            <field name="project_folder_path" readonly="1"
                                   invisible="not mbioe_project_id"/>
                            <field name="available_phases_count" readonly="1"
                                   invisible="not mbioe_project_id"/>
                            <field name="total_elevations_count" readonly="1"
                                   invisible="not mbioe_project_id"/>
                        </group>
                        
                        <group string="Import Options">
                            <field name="clear_existing"/>
                        </group>
                    </group>
                    
                    <group string="Phase Selection" invisible="not mbioe_project_id">
                        <field name="mbioe_phase_ids" 
                               widget="many2many_checkboxes"
                               nolabel="1"
                               options="{'horizontal': True}"/>
                        <field name="selected_elevations_count" readonly="1"
                               invisible="not mbioe_phase_ids"/>
                    </group>
                </sheet>
                
                <!-- CONFIRMATION STATE CONTENT -->
                <sheet invisible="state != 'confirm'">
                    <!-- Progress Indicator - Top Right -->
                    <div class="oe_button_box" style="position: absolute; top: 0; right: 0;">
                        <field name="state" widget="statusbar" 
                               statusbar_visible="select,confirm"
                               options="{'clickable_stages': false}"/>
                    </div>
                    
                    <group>
                        <group string="Project Information">
                            <field name="mbioe_project_id" readonly="1"/>
                            <field name="project_folder_path" readonly="1"/>
                            <field name="available_phases_count" readonly="1"/>
                        </group>
                        
                        <group string="Import Details">
                            <field name="selected_elevations_count" readonly="1"/>
                            <field name="clear_existing" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Selected Phases">
                        <field name="mbioe_phase_ids" readonly="1" nolabel="1">
                            <list>
                                <field name="name"/>
                                <field name="elevation_count"/>
                                <field name="sequence"/>
                            </list>
                        </field>
                    </group>
                    
                    <div class="alert alert-warning" role="alert" invisible="not clear_existing">
                        <strong>Warning:</strong> Existing Logikal import lines will be removed before importing new data.
                    </div>
                </sheet>
                
                <!-- STATE-SPECIFIC FOOTER BUTTONS -->
                <footer>
                    <!-- Selection State Buttons -->
                    <button string="Next" name="action_next" type="object" 
                            class="oe_highlight btn-primary"
                            invisible="state != 'select' or not mbioe_project_id or not mbioe_phase_ids"/>
                    
                    <!-- Confirmation State Buttons -->
                    <button string="Import Now" name="action_import" type="object" 
                            class="oe_highlight btn-primary"
                            invisible="state != 'confirm'"
                            confirm="This will add new lines to your sales order. Continue?"/>
                    <button string="Back" name="action_back" type="object" 
                            class="btn-secondary"
                            invisible="state != 'confirm'"/>
                    
                    <!-- Always Available Buttons -->
                    <button string="Cancel" name="action_cancel" type="object" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Wizard Action -->
    <record id="action_logikal_import_wizard" model="ir.actions.act_window">
        <field name="name">Logikal Import</field>
        <field name="res_model">logikal.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_logikal_import_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{'default_state': 'select'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Import Logikal Project Data
            </p>
            <p>
                Select a Logikal project and its phases to import elevations 
                as sales order lines with proper section organization.
            </p>
        </field>
    </record>
    
</odoo>
