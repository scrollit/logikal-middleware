<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Folder Action -->
    <record id="action_mbioe_folder" model="ir.actions.act_window">
        <field name="name">MBIOE Folders</field>
        <field name="res_model">mbioe.folder</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_root_folders': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No folders found!
            </p>
            <p>
                Folders are automatically synchronized from the MBIOE/Logikal system.<br/>
                Use the MBIOE Operations interface to start a synchronization.
            </p>
        </field>
    </record>

    <!-- Project Action -->
    <record id="action_mbioe_project" model="ir.actions.act_window">
        <field name="name">MBIOE Projects</field>
        <field name="res_model">mbioe.project</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active_projects': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No projects found!
            </p>
            <p>
                Projects are automatically synchronized from the MBIOE/Logikal system.<br/>
                Use the MBIOE Operations interface to start a synchronization.
            </p>
        </field>
    </record>

    <!-- Phase Action -->
    <record id="action_mbioe_phase" model="ir.actions.act_window">
        <field name="name">MBIOE Phases</field>
        <field name="res_model">mbioe.project.phase</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active_phases': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No phases found!
            </p>
            <p>
                Phases are automatically synchronized from the MBIOE/Logikal system.<br/>
                Use the MBIOE Operations interface to start a synchronization.
            </p>
        </field>
    </record>

    <!-- Elevation Action -->
    <record id="action_mbioe_elevation" model="ir.actions.act_window">
        <field name="name">MBIOE Elevations</field>
        <field name="res_model">mbioe.project.elevation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active_elevations': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No elevations found!
            </p>
            <p>
                Elevations are automatically synchronized from the MBIOE/Logikal system.<br/>
                Use the MBIOE Operations interface to start a synchronization.
            </p>
        </field>
    </record>

    <!-- Operations Server Action -->
    <record id="srv_open_mbioe_operations" model="ir.actions.server">
        <field name="name">Open Logikal Operations</field>
        <field name="model_id" ref="model_mbioe_operations"/>
        <field name="state">code</field>
        <field name="code">action = env['mbioe.operations'].action_open_console()</field>
    </record>

    <!-- Operations Action -->
    <record id="action_mbioe_operations" model="ir.actions.act_window">
        <field name="name">Logikal Operations</field>
        <field name="res_model">mbioe.operations</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <!-- keep only valid context keys -->
        <field name="context">{'form_view_initial_mode': 'edit', 'clear_breadcrumbs': True}</field>
    </record>

    <!-- Session Log Action -->
    <record id="action_mbioe_session_log" model="ir.actions.act_window">
        <field name="name">MBIOE Session Logs</field>
        <field name="res_model">mbioe.session.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_recent_logs': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No session logs found!
            </p>
            <p>
                Session logs track API interactions with the MBIOE system.<br/>
                They are automatically created during synchronization operations.
            </p>
        </field>
    </record>

    <!-- Master Sync Action -->
    <record id="action_mbioe_master_sync" model="ir.actions.act_window">
        <field name="name">Sync Orchestration</field>
        <field name="res_model">mbioe.master.sync</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sync orchestration!
            </p>
            <p>
                This will allow you to monitor and manage sync operations for phases and projects.
            </p>
        </field>
    </record>

    <!-- Folder Sync Action -->
    <record id="action_mbioe_folder_sync" model="ir.actions.act_window">
        <field name="name">Folder Sync Status</field>
        <field name="res_model">mbioe.folder.sync</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No folder sync jobs found!
            </p>
            <p>
                Folder sync jobs are created automatically when you start a master sync.
            </p>
        </field>
    </record>

    <!-- Sales Integration Action -->
    <record id="action_mbioe_sales_integration" model="ir.actions.act_window">
        <field name="name">MBIOE Sales Integrations</field>
        <field name="res_model">mbioe.sales.integration</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No MBIOE sales integrations found!
            </p>
            <p>
                MBIOE sales integrations track the import of project data into sales orders.
                When you import phases and elevations from an MBIOE project into a sales order,
                an integration record is created here for tracking and auditing purposes.
            </p>
        </field>
    </record>
    
    <!-- Import Config Action -->
    <record id="action_mbioe_import_config" model="ir.actions.act_window">
        <field name="name">MBIOE Import Configuration</field>
        <field name="res_model">mbioe.import.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No MBIOE import configurations found!
            </p>
            <p>
                Configure how MBIOE project data is imported into sales orders.
                You can set up product creation rules, pricing settings, and display templates.
            </p>
        </field>
    </record>

</odoo>
